<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherWardrobe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="android:windowSplashscreenContent" tools:targetApi="s">@drawable/splash_logo</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>


    </style>

    <style name="ShapeImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TextView">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextView.small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="TextView.SemiLarge">
        <item name="android:textSize">@dimen/text_semi_large</item>
    </style>

    <style name="TextView.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="StyleRoundedShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_default</item>
    </style>

</resources>